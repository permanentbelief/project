.item {
  display: flex;
  padding: 30rpx 0;
}

.img {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img image {
  width: 150rpx;
  height: 150rpx;
}

.mid {
  flex: 7;
}

.top text:first-child {
  padding: 3rpx 10rpx;
  color: #fff;
  background-color: #aadbcb;
  font-size: 28rpx;
}

.top text:last-child {
  margin-left: 20rpx;
  font-weight: 700;
}

.btom {
  margin-top: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.btom text {
  font-weight: 700;
}

.last {
  margin-top: 20rpx;
}

.last text:first-child {
  color: #fe590d;
  font-weight: 700;
  font-size: 35rpx;
}

.last text:last-child {
  color: #b0b0b0;
  margin-left: 20rpx;
  font-size: 27rpx;
}

.null{
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
}