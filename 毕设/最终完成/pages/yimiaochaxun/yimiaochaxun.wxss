page {
    background-color: #f5f5f5;
}

.box {
    padding: 0 20rpx;
}

.title {
    padding: 20rpx 0;
}

.item {
    border-radius: 20rpx;
    background-color: #fff;
    padding: 40rpx 30rpx;
    box-shadow: 5rpx 5rpx 5px #ccc;
    margin: 20rpx 0;
}

.item view:not(:first-child) {
    margin-top: 35rpx;
    display: flex;
}

.item view:not(:first-child) text:first-child {
    color: #ababab;
    flex: 3.5;
}

.item view:not(:first-child) text:last-child {
    flex: 6.5;
}

.item input {
    border-bottom: 1px solid #ccc;
}