<view wx:if="{{res}}" class="box">
    <!-- 上面个人信息 -->
    <view class="top">
            <view class = "eye">
            <text bindtap="showEye" wx:if="{{isShow}}" class="iconfont icon-biyan"></text>
            <text bindtap="showEye" wx:else class="iconfont icon-zhengyan"></text>
            </view>

            <view class="name">
                <text style="font-size:37rpx"> 姓名 </text>    
                <text class="tright">{{realName}} </text>
            </view>
       
        <view class="idCard">
             <view style="font-size:37rpx">身份证件</view>
            <text class ="right">{{idCard}}</text>
        </view>
        <view class="county">
            <text style="font-size: 37rpx">国籍</text>
            <text class="tright">中国</text> 
        </view>
    </view>
    <!-- 下面检测结果 -->
    <view class="mid">
            <view wx:if="{{!res.result}}">
                <view class="mid-top">
                    <text>核酸检测结果</text>
                    <view>
                        <text>阴性</text>
                    </view>
                </view>
            </view>   
            <view wx:else>
                <view class="yymid-top"> 
                     <text>核酸检测结果</text>
                    <view>
                        <text>阳性</text>
                    </view>
                </view>
            </view>
        <view class="mid-last">
            <text>检测机构</text>
            <text>{{res.group}}（{{res.province}}）</text>
        </view>

        <view class="time">
        <view class="mid-last">
            <text>预约日期</text>
            <text>{{res.yuyueDate}}</text>
        </view>
        <view class="mid-last">
            <text>预约时间 </text>
            <text> {{res.yuyueTime}} </text>
        </view>
        <view class="mid-last">
            <text>创建时间</text>
            <text>{{res.createTime}}</text>
        </view>
        <view class="mid-last">
            <text>下单时间</text>
            <text>{{res.payTime}}</text>
        </view>
        <view class="mid-last">
            <text>检测时间</text>
            <text>{{res.qiandaoTime}}</text>
        </view>
        <view class="mid-last">
            <text>有效剩余时间</text>
            <text wx:if="{{isValid}}">{{leftTime}}</text>
            <text wx:else> 有效期两天已过,已经失效 </text>
        </view>
        
        </view>
        <!-- 老幼助查和个人详情报告要显示的数据 -->
        <block wx:if="{{detail}}">
            <view class="person">
                <view class="mid-last">
                    <text>姓名</text>
                    <text>{{res.realName}}</text>
                </view>
                <view class="mid-last">
                    <text>性别</text>
                    <text>{{res.genderType}}</text>
                </view>
                <view class="mid-last">
                    <text>年龄</text>
                    <text>{{res.age}}岁</text>
                </view>
                <view class="mid-last">
                    <text>居住地址</text>
                    <text wx:if="{{res.address}}">{{res.address}}</text>
                    <text wx:else>暂无录入</text>
                </view>
            </view>
                 <view class="mid-last">
                    <text>检测机构</text>
                    <text>{{res.group}}</text>
                </view>
                <view class="mid-last">
                    <text>检测机构ID</text>
                    <text style="font-size:24rpx">{{res.groupId}}</text>
                </view>
                <view class="mid-last">
                     <text>检测机构地址</text>
                    <text wx:if="{{groupAddress}}">{{groupAddress}}</text>
                    <text wx:else>暂无录入</text>
                </view>
                <view class="mid-last">
                    <text>订单号</text>
                    <text>{{res.orderNum}}</text>
                </view>
                <view class="mid-last">
                    <text>支付单号</text>
                    <text>{{res.payNum}}</text>
                </view>
                <view class="mid-last">
                    <text>支付金额</text>
                    <text>{{res.price}}</text>
                </view>
         
        </block>
    </view>
    <!-- 抗体检测结果 -->
    <view class="last">
        <text>抗体检测结果</text>
        <text>暂未查询到数据</text>
    </view>
    <view class="tip">
        <text>注：核酸和抗体检测数据在不断汇聚和完善中，查询结果仅供参考</text>
    </view>

</view>





<view wx:if="{{!detail}}">
   <view wx:if="{{list.length == 0}}">
  <van-button class="btn" style="float:right;text-align:right; font-size:27rpx; font-color:gray" type="primary" bindtap="getMore"  color="linear-gradient(to right, #4bb0ff, gray)"> 更多接种记录 </van-button> 
    </view>
   <view wx:else>
          <!-- 上面个人信息 -->
    <view class="top">
