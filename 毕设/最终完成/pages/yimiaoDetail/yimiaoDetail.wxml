<view class="box">
  <view bindtap="showTip" class="tips">
    <text class="iconfont icon-tishi"></text>
    <text>近期核酸检测预约量出现暴发性增长,部分预</text>
    <text class="iconfont icon-youjiantou"></text>
  </view>
  <!-- 图片区域 -->
  <view class="img">
    <image src="{{detail.img}}"></image>
  </view>
  <view class="content">
    <text wx:if="{{detail.group.time==1}}">【4-8h出报告】{{detail.title}}（含上门服务费）</text>
    <text wx:if="{{detail.group.time==2}}">【8-12h出报告】{{detail.title}}（含上门服务费）</text>
    <text wx:if="{{detail.group.time==3}}">【12-24h出报告】{{detail.title}}（含上门服务费）</text>
    <text wx:if="{{detail.group.time==4}}">【1-2h出报告】{{detail.title}}(含上门服务费) </text>

  </view>
  <view class="price">
    <text>￥{{detail.renshu * detail.group.hesuanPrice}}</text>
    <text>已售{{detail.num?detail.num:0}}</text>
  </view>
  <view style="height: 8px;background-color: #f4f4f4;margin: 20rpx 0;"></view>
  <view class="nav">
    <view class="{{nav==0?'green':''}}" bindtap="chooseNav" data-index="0">服务详情</view>
    <view class="{{nav==1?'green':''}}" bindtap="chooseNav" data-index="1">详情</view>
    <view class="{{nav==2?'green':''}}" bindtap="chooseNav" data-index="2">服务</view>
    <view class="{{nav==3?'green':''}}" bindtap="chooseNav" data-index="3">服务须知</view>
  </view>
  <!-- 点击详情 -->
  <view wx:if="{{nav==0}}">
    <view class="box1">
    <view>
