      进行上门检测。
    </view>
  </view>

  <view wx:if="{{nav==3}}">


  </view>
  
  <view style="height: 200rpx;"></view>
  <!-- 预约按钮 -->
  <view class="btn">
    <view class="left">
      <view bindtap="skipIndex">
        <image src="/images/index-s.png"></image>
        <text>首页</text>
      </view>
    </view>
    <view class="right">
      <view data-id="{{detail._id}}" bindtap="skipDetail">预约</view>
    </view>
  </view>
</view>
